/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.panel {
  background: #fff;
  padding: 25rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  transition: 0.2s;
}
.panel .panel_title {
  color: #0086F1;
  font-size: 28rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.panel:first-child {
  margin-top: 0px;
}
.err {
  background: #fb6155;
  text-align: center;
}
.err .panel_title {
  color: #fff;
}
.success {
  background: #228e33;
  text-align: center;
}
.success .panel_title {
  color: #fff;
}
.onTap:active {
  transform: scale(0.95);
}
page {
  width: 100%;
  height: 100%;
  background: #f0f2f5;
}
page .cont {
  width: 100%;
  height: 100%;
  background: #f0f2f5;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}
page .cont2 {
  display: flex;
  height: 100%;
}
page .cont2 .c {
  width: 0%;
  height: 100%;
  transition: 0.3s;
  opacity: 0;
  transform: scale(0.3);
}
page .cont2 .active {
  width: 100%;
  opacity: 1;
  transform: scale(1);
}
