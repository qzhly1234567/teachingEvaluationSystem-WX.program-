/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.panel {
  background: #fff;
  padding: 25rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  transition: 0.2s;
}
.panel .panel_title {
  color: #0086F1;
  font-size: 28rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.panel:first-child {
  margin-top: 0px;
}
.err {
  background: #fb6155;
  text-align: center;
}
.err .panel_title {
  color: #fff;
}
.success {
  background: #228e33;
  text-align: center;
}
.success .panel_title {
  color: #fff;
}
.onTap:active {
  transform: scale(0.95);
}
page {
  width: 100%;
  height: 100%;
}
page .cont {
  width: 100%;
  height: 100%;
  background: #f0f2f5;
  box-sizing: border-box;
}
page .cont .adminTab {
  height: 100rpx;
  background: #0086F1;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
page .cont .adminTab .item {
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #8BBBE1;
  line-height: 100rpx;
  transition: 0.3s;
}
page .cont .adminTab .active {
  color: #fff;
}
page .cont .adminTab .now {
  position: absolute;
  bottom: 0;
  background: #f0f2f5;
  width: 10%;
  height: 10rpx;
  border-radius: 10rpx 10rpx 0 0;
  left: 20%;
  transition: 0.3s;
}
page .cont .adminTab .nowActive {
  left: 70%;
}
page .cont .classList {
  padding: 20rpx 30rpx;
  background: #f0f2f5;
}
page .cont .classList .panel .panel_title {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0;
}
page .cont .classList .panel .panel_title .info {
  display: flex;
  align-items: center;
}
page .cont .classList .panel .panel_title .info text {
  font-size: 30rpx;
  color: #0086F1;
  margin-right: 10rpx;
}
page .cont .classList .panel .panel_title .info image {
  width: 30rpx;
  height: 30rpx;
}
page .cont .teacherList {
  padding: 20rpx 30rpx;
  background: #f0f2f5;
}
page .cont .teacherList .panel .panel_title {
  display: flex;
  align-items: center;
  padding: 0;
  position: relative;
}
page .cont .teacherList .panel .panel_title > image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
page .cont .teacherList .panel .panel_title .info {
  position: absolute;
  right: 0rpx;
  display: flex;
  align-items: center;
}
page .cont .teacherList .panel .panel_title .info text {
  font-size: 30rpx;
  color: #0086F1;
  margin-right: 10rpx;
}
page .cont .teacherList .panel .panel_title .info image {
  width: 40rpx;
  height: 40rpx;
}
