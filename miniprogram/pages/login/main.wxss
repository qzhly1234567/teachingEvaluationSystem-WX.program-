/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.panel {
  background: #fff;
  padding: 25rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  transition: 0.2s;
}
.panel .panel_title {
  color: #0086F1;
  font-size: 28rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.panel:first-child {
  margin-top: 0px;
}
.err {
  background: #fb6155;
  text-align: center;
}
.err .panel_title {
  color: #fff;
}
.success {
  background: #228e33;
  text-align: center;
}
.success .panel_title {
  color: #fff;
}
.onTap:active {
  transform: scale(0.95);
}
page {
  height: 100%;
}
page #main {
  height: 100%;
}
page #main .admin {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #0086F1;
  padding-right: 20%;
  box-sizing: border-box;
}
page #main .admin text {
  font-size: 40rpx;
  padding-top: 150rpx;
  display: block;
  text-align: center;
  color: #fff;
}
page #main .admin .inputField {
  position: absolute;
  bottom: 200rpx;
  display: block;
  width: 100%;
  padding-right: 20%;
  box-sizing: border-box;
}
page #main .admin .inputField input {
  display: block;
  margin: auto;
  width: 360rpx;
  height: 75rpx;
  background: #fff;
  color: #0086F1;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
page #main .admin .inputField input::-webkit-input-placeholder {
  color: #8BBBE1;
}
page #main .admin .inputField button {
  width: 360rpx;
  height: 75rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
  text-align: center;
  color: #0086F1;
  line-height: 75rpx;
}
page #main .user {
  height: 100%;
  padding-top: 150rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
  box-sizing: border-box;
  background: #f0f2f5;
  transition: 0.3s;
}
page #main .user image {
  width: 180rpx;
  height: 180rpx;
  display: block;
  margin: auto;
}
page #main .user .sys {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  opacity: 0.8;
}
page #main .user .btn {
  position: absolute;
  width: 100%;
  bottom: 150rpx;
}
page #main .user .btn .inputField {
  bottom: 200 rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
page #main .user .btn .inputField input {
  display: block;
  margin: auto;
  width: 450rpx;
  height: 75rpx;
  background: #fff;
  color: #0086F1;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
page #main .user .btn .inputField .inputClass {
  color: #8BBBE1;
  font-size: 30rpx;
}
page #main .user .btn radio-group {
  display: flex;
  align-items: center;
  justify-content: center;
}
page #main .user .btn radio-group label {
  font-size: 30rpx;
  margin-right: 20rpx;
}
page #main .user .btn button {
  width: 450rpx;
  display: block;
  margin: 20rpx auto 0;
  background: #0086F1;
  border: none;
  color: #fff;
}
page #main .active {
  background: #eee;
  transform: translateX(70%) scale(0.8);
}
